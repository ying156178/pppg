<body>
  <h1>Tính phụ phí STD & Key HLE</h1>

  <form id="feeForm">
    <label>Std HLE mẫu giáo:
      <div class="input-group">
        <button type="button" onclick="changeValue('stdKindergarten', -1)">-</button>
        <input type="number" id="stdKindergarten" min="0" value="0">
        <button type="button" onclick="changeValue('stdKindergarten', 1)">+</button>
      </div>
    </label>
    <label>Std HLE sleep:
      <div class="input-group">
        <button type="button" onclick="changeValue('stdSleep', -1)">-</button>
        <input type="number" id="stdSleep" min="0" value="0">
        <button type="button" onclick="changeValue('stdSleep', 1)">+</button>
      </div>
    </label>
    <label>Set 4 key Peanut:
      <div class="input-group">
        <button type="button" onclick="changeValue('setKeyPeanut', -1)">-</button>
        <input type="number" id="setKeyPeanut" min="0" value="0">
        <button type="button" onclick="changeValue('setKeyPeanut', 1)">+</button>
      </div>
    </label>

    <div class="checkbox-group">
      <input type="checkbox" id="directDeal">
      <label for="directDeal">Giao dịch trực tiếp (không tính phí gói)</label>
    </div>

    <button type="button" class="submit" onclick="calculateFee()">Tính phí</button>
  </form>

  <div class="result" id="result" style="display:none;"></div>

  <script>
    function changeValue(id, delta) {
      const input = document.getElementById(id);
      let value = parseInt(input.value) || 0;
      value = Math.max(0, value + delta);
      input.value = value;
    }

    function calculateFee() {
      const getValue = id => {
        const val = document.getElementById(id).value;
        return val === '' ? 0 : parseInt(val);
      };

      const stdKindergarten = getValue('stdKindergarten');
      const stdSleep = getValue('stdSleep');
      const setKeyPeanut = getValue('setKeyPeanut');
      const isDirect = document.getElementById('directDeal').checked;

      // phí sản phẩm
      const feeStdKindergarten = stdKindergarten * 281;
      const feeStdSleep = stdSleep * 281;
      const feeSetKey = setKeyPeanut * (281 * 4);
      const feeSetKeyBag = setKeyPeanut * 180;

      let productFee = feeStdKindergarten + feeStdSleep + feeSetKey + feeSetKeyBag;

      // phí đóng gói
      let packagingFee = 0;
      if (!isDirect) {
        let needBox = false;
        if (stdKindergarten > 0 || stdSleep > 0 || setKeyPeanut > 0) {
          needBox = true;
        }

        if (needBox) {
          if (setKeyPeanut >= 3 || stdKindergarten > 0 || stdSleep > 0) {
            packagingFee += 1600; // hộp lớn
          } else if (setKeyPeanut > 0) {
            packagingFee += 1500; // hộp nhỏ
          }
          packagingFee += 600; // bbw + băng keo + mực
        }
      }

      const finalFee = productFee + packagingFee;

      document.getElementById("result").style.display = 'block';
      document.getElementById("result").innerText = `Tổng phụ phí: ${finalFee.toLocaleString()} VND`;
    }
  </script>
